controllable action;
plant automaton Context:
  disc bool field in any;
  alg bool __precondition = true;
  alg bool postcondition = field;
  alg bool __postcondition = postcondition;
  initial __precondition;
  marked __postcondition;
  location:
    initial;
    marked;
    edge action when not field do field := true;
end
supervisor automaton sup:
  alphabet action;
  location:
    initial;
    marked;
    edge action when true;
end
supervisor invariant Context.__postcondition disables action;
