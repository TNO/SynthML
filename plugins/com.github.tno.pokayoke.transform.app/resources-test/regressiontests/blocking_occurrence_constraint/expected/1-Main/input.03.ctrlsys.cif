controllable left;
controllable right;
controllable flip;
supervisor automaton at_most_once__left:
  disc int[0..1] __occurrences;
  marked __occurrences >= 0;
  location:
    initial;
    marked;
    edge left when __occurrences < 1 do __occurrences := __occurrences + 1;
end
supervisor automaton at_most_once__right:
  disc int[0..1] __occurrences;
  marked __occurrences >= 0;
  location:
    initial;
    marked;
    edge right when __occurrences < 1 do __occurrences := __occurrences + 1;
end
supervisor automaton blocking__flip:
  disc int[0..1] __occurrences;
  marked __occurrences >= 0;
  location:
    initial;
    marked;
    edge flip when __occurrences < 0 do __occurrences := __occurrences + 1;
end
plant automaton Context:
  disc bool field1 in any;
  disc bool field2 = false;
  alg bool postcondition = field2;
  alg bool __postcondition__at_most_once__left = at_most_once__left.__occurrences >= 0;
  alg bool __postcondition__at_most_once__right = at_most_once__right.__occurrences >= 0;
  alg bool __postcondition__blocking__flip = blocking__flip.__occurrences >= 0;
  alg bool __postcondition = postcondition and __postcondition__at_most_once__left and (__postcondition__at_most_once__right and __postcondition__blocking__flip);
  marked __postcondition;
  location:
    initial;
    marked;
    edge left when not field1 do field2 := true;
    edge right when field1 do field2 := true;
    edge flip when true do field1 := not field1;
end
supervisor automaton sup:
  alphabet left, right, flip;
  location:
    initial;
    marked;
    edge flip when false;
    edge left when at_most_once__left.__occurrences = 0 and not Context.field2 and (at_most_once__right.__occurrences = 0 and (blocking__flip.__occurrences = 0 and not Context.field1));
    edge right when at_most_once__left.__occurrences = 0 and not Context.field2 and (at_most_once__right.__occurrences = 0 and (blocking__flip.__occurrences = 0 and Context.field1));
end
