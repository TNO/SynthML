enum UnknownDrink = Coffee, Tea, Unknown;
plant automaton Context:
  disc bool Is_Computer_Ready = false;
  disc bool Is_Computer_On = false;
  disc UnknownDrink Coffee_or_Tea = Unknown;
  disc bool Has_Drank_Coffee_or_Tea = false;
  disc bool Is_Ready_to_Work = false;
  controllable Turn_Computer_On;
  controllable Starting_Computer;
  controllable Drink_Coffee;
  controllable Drink_Tea;
  controllable Start_Working;
  controllable Flip_A_Coin;
  uncontrollable Flip_A_Coin_result_1;
  uncontrollable Flip_A_Coin_result_2;
  disc int[0..1] __activeAction;
  location:
    initial;
    marked;
    edge Turn_Computer_On when not Is_Computer_Ready and not Is_Computer_On, __activeAction = 0 do Is_Computer_On := true;
    edge Starting_Computer when not Is_Computer_Ready and Is_Computer_On, __activeAction = 0 do Is_Computer_Ready := true;
    edge Drink_Coffee when not Has_Drank_Coffee_or_Tea and Coffee_or_Tea = Coffee, __activeAction = 0 do Has_Drank_Coffee_or_Tea := true, Coffee_or_Tea := Unknown;
    edge Drink_Tea when not Has_Drank_Coffee_or_Tea and Coffee_or_Tea = Tea, __activeAction = 0 do Has_Drank_Coffee_or_Tea := true, Coffee_or_Tea := Unknown;
    edge Start_Working when Has_Drank_Coffee_or_Tea and Is_Computer_Ready, __activeAction = 0 do Is_Ready_to_Work := true;
    edge Flip_A_Coin when Is_Computer_On and not Has_Drank_Coffee_or_Tea and Coffee_or_Tea = Unknown, __activeAction = 0 do __activeAction := 1;
    edge Flip_A_Coin_result_1 when __activeAction = 1 do Coffee_or_Tea := Coffee, __activeAction := 0;
    edge Flip_A_Coin_result_2 when __activeAction = 1 do Coffee_or_Tea := Tea, __activeAction := 0;
end
requirement automaton postcondition:
  controllable c_satisfied;
  location NotSatisfied:
    initial;
    edge c_satisfied when Context.Is_Computer_On and Context.Is_Computer_Ready and Context.Has_Drank_Coffee_or_Tea and Context.Is_Ready_to_Work goto Satisfied;
  location Satisfied:
    marked;
end
requirement automaton happens_at_most_once__Turn_Computer_On:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge Context.Turn_Computer_On when occurrences < 1 do occurrences := occurrences + 1;
end
requirement automaton happens_at_most_once__Drink_Coffee:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge Context.Drink_Coffee when occurrences < 1 do occurrences := occurrences + 1;
end
requirement automaton happens_at_most_once__Drink_Tea:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge Context.Drink_Tea when occurrences < 1 do occurrences := occurrences + 1;
end
requirement automaton happens_at_most_once__Start_Working:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge Context.Start_Working when occurrences < 1 do occurrences := occurrences + 1;
end
requirement automaton happens_at_most_once__Starting_Computer:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge Context.Starting_Computer when occurrences < 1 do occurrences := occurrences + 1;
end
