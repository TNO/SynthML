controllable left;
controllable right;
controllable flip;
plant automaton Context:
  disc bool field1 in any;
  disc bool field2 = false;
  alg bool __precondition = true;
  alg bool postcondition = field2;
  alg bool __postcondition__at_most_once__left = at_most_once__left.__occurrences >= 0;
  alg bool __postcondition__at_most_once__right = at_most_once__right.__occurrences >= 0;
  alg bool __postcondition__exactly_once__flip = exactly_once__flip.__occurrences >= 1;
  alg bool __postcondition = postcondition and __postcondition__at_most_once__left and (__postcondition__at_most_once__right and __postcondition__exactly_once__flip);
  initial __precondition;
  marked __postcondition;
  location:
    initial;
    marked;
    edge left when not field1 do field2 := true;
    edge right when field1 do field2 := true;
    edge flip when true do field1 := not field1;
end
requirement automaton at_most_once__left:
  disc int[0..1] __occurrences;
  marked __occurrences >= 0;
  location:
    initial;
    marked;
    edge left when __occurrences < 1 do __occurrences := __occurrences + 1;
end
requirement automaton at_most_once__right:
  disc int[0..1] __occurrences;
  marked __occurrences >= 0;
  location:
    initial;
    marked;
    edge right when __occurrences < 1 do __occurrences := __occurrences + 1;
end
requirement automaton exactly_once__flip:
  disc int[0..1] __occurrences;
  marked __occurrences >= 1;
  location:
    initial;
    marked;
    edge flip when __occurrences < 1 do __occurrences := __occurrences + 1;
end
requirement invariant Context.__postcondition disables left;
requirement invariant Context.__postcondition disables right;
requirement invariant Context.__postcondition disables flip;
