controllable act1;
controllable act2;
plant automaton Context:
  alg bool __precondition = true;
  alg bool __postcondition = true;
  initial __precondition;
  marked __postcondition;
  requirement invariant Requirement__1: act1 needs true;
  requirement invariant Requirement__2: act2 needs true;
  location:
    initial;
    marked;
    edge act1 when true;
    edge act2 when true;
end
requirement invariant Context.__postcondition disables act1;
requirement invariant Context.__postcondition disables act2;
