<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         id="com.github.tno.pokayoke.transform.app.ui.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            uri="fragment.e4xmi">
      </fragment>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.github.tno.pokayoke.transform.app.ui.oneCifFile">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <adapt
                     type="org.eclipse.core.resources.IFile">
               </adapt>
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.cif">
               </test>
            </iterate>
         </with>
      </definition>
      <definition
            id="com.github.tno.pokayoke.transform.app.ui.oneUmlFile">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <adapt
                     type="org.eclipse.core.resources.IFile">
               </adapt>
               <test
                     property="org.eclipse.core.resources.name"
                     value="*.uml">
               </test>
            </iterate>
         </with>
      </definition>
   </extension>

</plugin>
