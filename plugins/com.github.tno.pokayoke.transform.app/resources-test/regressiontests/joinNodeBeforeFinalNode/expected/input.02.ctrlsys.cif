controllable action1;
uncontrollable action1__result_1;
uncontrollable action1__result_2;
controllable action2;
plant automaton Example:
  disc bool field1 in any;
  disc bool field2 in any;
  disc int[0..1] __activeAction;
  alg bool precondition = not field1 and not field2;
  alg bool __precondition = precondition;
  alg bool postcondition = field1 and field2;
  alg bool __postcondition_atomicity = __activeAction = 0;
  alg bool __postcondition = postcondition and __postcondition_atomicity;
  initial __precondition;
  marked __postcondition;
  location:
    initial;
    marked;
    edge action1 when not field1, __activeAction = 0 do __activeAction := 1;
    edge action1__result_1 when __activeAction = 1 do field1 := true, __activeAction := 0;
    edge action1__result_2 when __activeAction = 1 do field1 := false, __activeAction := 0;
    edge action2 when not field2, __activeAction = 0 do field2 := true;
end
supervisor automaton sup:
  alphabet action1, action2;
  location:
    initial;
    marked;
    edge action1 when Example.__activeAction = 0 and not Example.field1;
    edge action2 when Example.__activeAction = 0 and not Example.field2;
end
