controllable left;
controllable right;
plant automaton Context:
  disc bool field1 in any;
  disc bool field2 = false;
  alg bool __precondition = true;
  alg bool postcondition = field2;
  alg bool __postcondition = postcondition;
  initial __precondition;
  marked __postcondition;
  location:
    initial;
    marked;
    edge left when not field1 do field2 := true;
    edge right when field1 do field2 := true;
end
supervisor automaton sup:
  alphabet left, right;
  location:
    initial;
    marked;
    edge left when true;
    edge right when true;
end
supervisor invariant Context.__postcondition disables left;
supervisor invariant Context.__postcondition disables right;
