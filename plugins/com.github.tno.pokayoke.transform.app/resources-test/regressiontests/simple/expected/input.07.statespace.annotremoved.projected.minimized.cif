controllable prepare_robot;
controllable robot_move_to_location1;
controllable robot_move_to_location2;
controllable robot_adjust_product;
controllable robot_release_product_at_location2;
controllable prepare_location2;
controllable measure_product_position;
automaton minimal:
  alphabet prepare_robot, robot_move_to_location1, robot_move_to_location2, robot_adjust_product, robot_release_product_at_location2, prepare_location2, measure_product_position;
  @state(projected = "s1")
  location s1:
    initial;
    edge prepare_location2 goto s2;
    edge prepare_robot goto s3;
  @state(projected = "s2")
  location s2:
    edge prepare_robot goto s5;
  @state(projected = "s3")
  location s3:
    edge prepare_location2 goto s5;
  @state(projected = "s8")
  location s4:
    marked;
  @state(projected = "s4")
  location s5:
    edge robot_move_to_location2 goto s8;
  @state(projected = "s7")
  location s6:
    edge robot_adjust_product goto s7;
    edge robot_move_to_location1 goto s4;
  @state(projected = "s6")
  location s7:
    edge measure_product_position goto s6;
  @state(projected = "s5")
  location s8:
    edge robot_release_product_at_location2 goto s7;
end
