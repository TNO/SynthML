enum Number = First, Second, Third;
controllable change;
controllable c_satisfied;
plant automaton Class:
  disc Number element in any;
  initial element = First;
  location:
    initial;
    marked;
    edge change when element != Third do element := Second;
end
supervisor automaton __postcondition:
  location NotSatisfied:
    initial;
    edge c_satisfied when Class.element = Second goto Satisfied;
  location Satisfied:
    marked;
end
supervisor automaton happens_at_most_once__change:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge change when occurrences < 1 do occurrences := occurrences + 1;
end
supervisor automaton sup:
  alphabet change, c_satisfied;
  location:
    initial;
    marked;
    edge c_satisfied when happens_at_most_once__change.occurrences = 1 and (Class.element = Second and __postcondition.NotSatisfied);
    edge change when (happens_at_most_once__change.occurrences = 1 or Class.element != Third) and happens_at_most_once__change.occurrences = 0;
end
