enum Number = First, Second, Third;
controllable change;
plant automaton Class:
  disc Number element in any;
  alg bool $pre = element = First;
  alg bool __precondition = $pre;
  alg bool $post = element = Second;
  alg bool __postcondition = $post;
  initial __precondition;
  marked __postcondition;
  location:
    initial;
    marked;
    edge change when element != Third do element := Second;
end
requirement automaton happens_at_most_once__change:
  disc int[0..1] occurrences;
  location:
    initial;
    marked occurrences >= 0;
    edge change when occurrences < 1 do occurrences := occurrences + 1;
end
requirement invariant Class.__postcondition disables change;
